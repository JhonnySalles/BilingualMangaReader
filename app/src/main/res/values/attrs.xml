<resources>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="FuriganaView">
        <attr name="android:text" />
        <attr name="android:maxLines" />
        <attr name="android:textAlignment" />
        <attr name="android:lineSpacingExtra" />
        <attr name="android:layout_marginEnd" />
        <attr name="android:layout_marginLeft" />
        <attr name="android:layout_marginRight" />
        <attr name="android:layout_marginStart" />
        <attr name="furiganaSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FloatingWindowOcr">
        <attr name="android:layout_margin" format="dimension"  />
        <attr name="android:background" />
    </declare-styleable>

    <bool name="isTablet">false</bool>
</resources>