<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/on_primary</item>
        <item name="colorAccent">@color/text_primary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/on_secondary</item>
        <item name="colorControlNormal">@color/on_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ToolbarBorderTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/on_secondary</item>
        <item name="colorControlNormal">@color/on_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

    <style name="SubToolbarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/on_secondary</item>
        <item name="colorControlNormal">@color/on_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@color/night_on_secondary</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="backgroundComboOutline"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorSurface">@color/primary</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@color/on_primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="FloatingPopup" parent="Theme.MaterialComponents"/>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ListFont" parent="@android:style/Widget.ListView">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>