<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppCompatAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/secondary</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:background">@color/primary_material_dark</item>
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="PopupTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>