<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/onPrimary"
    tools:context=".view.ui.pages_link.PagesLinkFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_small">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_file_link"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/page_link_file"
            android:textColorHint="@color/textPrimary"
            app:boxBackgroundColor="@color/primary"
            app:boxStrokeColor="@color/onSecondary"
            app:startIconTint="@color/onSecondary"
            app:startIconDrawable="@drawable/ic_file"
            app:placeholderTextColor="@color/textPrimary"
            app:hintTextColor="@color/onSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:id="@+id/menu_autocomplete_file_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/textPrimary"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pages_linked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scrollbars="vertical"
            android:layout_marginTop="@dimen/page_link_list_link_margin_top"
            android:layout_marginBottom="@dimen/page_link_list_link_margin_bottom"
            android:paddingBottom="@dimen/page_link_list_link_padding_bottom"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay"
            app:layout_constraintBottom_toTopOf="@+id/btn_file_link_save"
            app:layout_constraintStart_toEndOf="@+id/rv_pages_not_linked"
            app:layout_constraintTop_toBottomOf="@+id/txt_file_link"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pages_not_linked"
            android:layout_width="@dimen/page_link_list_not_link_height"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scrollbars="vertical"
            android:layout_marginTop="@dimen/page_link_list_link_margin_top"
            android:layout_marginBottom="@dimen/page_link_list_link_margin_bottom"
            android:paddingBottom="@dimen/page_link_list_link_padding_bottom"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay"
            android:background="@color/onPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_file_link"
            app:layout_constraintEnd_toStartOf="@+id/rv_pages_linked"
            app:layout_constraintBottom_toTopOf="@+id/btn_file_link_save"
            app:layout_constraintVertical_bias="0"/>

        <Button
            android:id="@+id/btn_file_link_refresh"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/page_link_button_lands_width"
            android:textColor="@color/textPrimary"
            android:text="@string/page_link_refresh"
            android:textAllCaps="false"
            android:layout_margin="@dimen/page_link_button_margin"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_file_link_save"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_file_link_save"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/page_link_button_lands_width"
            android:textColor="@color/textPrimary"
            android:text="@string/page_link_save"
            android:textAllCaps="false"
            android:layout_margin="@dimen/page_link_button_margin"
            android:layout_gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/btn_file_link_full_screen"
            app:layout_constraintStart_toEndOf="@+id/btn_file_link_refresh"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_file_link_full_screen"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/page_link_fullscreen_width"
            android:textColor="@color/textPrimary"
            android:textAllCaps="false"
            android:backgroundTint="@color/transparent"
            android:contentDescription="@string/reading_button_popup_floating"
            android:layout_gravity="end"
            android:paddingLeft="@dimen/page_link_fullscreen_padding"
            android:paddingRight="@dimen/page_link_fullscreen_padding"
            app:icon="@drawable/ic_fullscreen"
            app:iconTint="@color/textPrimary"
            app:iconSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!--                                Ended                                -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/pages_link_scroll_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/page_link_scrolling_button_margin"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/action_scroll_up"
            android:src="@drawable/ic_up_arrow"
            app:backgroundTint="@color/onSecondary"
            app:borderWidth="@dimen/page_link_up_border"
            app:fabCustomSize="@dimen/page_link_up_width"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_file_link"
            app:maxImageSize="@dimen/page_link_up_image_width"
            app:tint="@color/onSecondary" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/pages_link_scroll_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/page_link_scrolling_button_margin"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/action_scroll_down"
            android:src="@drawable/ic_down_arrow"
            app:backgroundTint="@color/onSecondary"
            app:borderWidth="@dimen/page_link_down_border"
            app:fabCustomSize="@dimen/page_link_down_width"
            app:layout_constraintBottom_toTopOf="@+id/btn_file_link_full_screen"
            app:layout_constraintRight_toRightOf="parent"
            app:maxImageSize="@dimen/page_link_down_image_width"
            app:tint="@color/onSecondary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>