<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/floatingSemiTransparent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="@dimen/margin">

        <TextView
            android:id="@+id/txt_floating_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/popup_reader_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <br.com.fenix.mangareader.service.kanji.FuriganaView
            android:id="@+id/txt_floating_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/popup_reader_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            custom:furiganaSize="12sp" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imgbtn_close"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/floating_reader_button_close"
        android:layout_height="@dimen/floating_reader_button_close"
        android:layout_gravity="top|left"
        android:layout_marginEnd="180dp"
        android:background="@color/onPrimary"
        android:src="@drawable/ic_close"
        android:tint="@color/textPrimary" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/nav_floating_change_language"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/floating_reader_button_width"
        android:layout_height="@dimen/floating_reader_button_width"
        android:layout_gravity="top|right"
        android:layout_marginEnd="145dp"
        android:background="@color/primary"
        android:src="@drawable/ic_translate"
        android:tint="@color/textPrimary"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/nav_floating_refresh"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/floating_reader_button_width"
        android:layout_height="@dimen/floating_reader_button_width"
        android:layout_gravity="top|right"
        android:layout_marginEnd="110dp"
        android:background="@color/primary"
        android:src="@drawable/ic_refresh"
        android:tint="@color/textPrimary"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/nav_floating_draw"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/floating_reader_button_width"
        android:layout_height="@dimen/floating_reader_button_width"
        android:layout_gravity="top|right"
        android:layout_marginEnd="75dp"
        android:background="@color/primary"
        android:src="@drawable/ic_draw_text"
        android:tint="@color/textPrimary"
        app:rippleColor="@color/onSecondary" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/nav_floating_before_text"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/floating_reader_button_width"
        android:layout_height="@dimen/floating_reader_button_width"
        android:layout_gravity="top|right"
        android:layout_marginEnd="40dp"
        android:background="@color/primary"
        android:src="@drawable/ic_navigate_before"
        android:tint="@color/textPrimary" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/nav_floating_next_text"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/floating_reader_button_width"
        android:layout_height="@dimen/floating_reader_button_width"
        android:layout_gravity="top|right"
        android:layout_marginEnd="5dp"
        android:background="@color/primary"
        android:src="@drawable/ic_navigate_next"
        android:tint="@color/textPrimary" />

</FrameLayout>
