<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/on_primary"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:theme="@style/AppTheme.NoNavigationBar"
    tools:context=".view.ui.pages_link.PagesLinkActivity">

    <FrameLayout
        android:id="@+id/root_frame_pages_link"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/on_primary"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:clipChildren="false" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_manga_pages_link"
        android:layout_width="@dimen/page_link_toolbar_size"
        android:layout_height="@dimen/default_navigator_header_size"
        android:gravity="top"
        android:background="@color/transparent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:paddingTop="10dp"
        app:popupTheme="@style/MyDarkToolbarStyle"
        android:theme="@style/ToolbarTheme"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>