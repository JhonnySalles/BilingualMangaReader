<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_line_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/book_line_card_layout_height"
    android:layout_marginBottom="1dp"
    android:orientation="horizontal">
    <!-- Media -->
    <ImageView
        android:id="@+id/book_line_image_cover"
        android:layout_width="@dimen/book_line_card_image"
        android:layout_height="50dp"
        android:background="@color/onPrimary"
        android:contentDescription=""
        app:srcCompat="@mipmap/book_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="1dp"
        android:paddingRight="5dp">

        <!-- Title, secondary and supporting text -->
        <TextView
            android:id="@+id/book_line_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book title"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/book_line_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Book reference"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="10dp" />

        <ProgressBar
            android:id="@+id/book_line_book_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:min="0" />
    </LinearLayout>
</LinearLayout>