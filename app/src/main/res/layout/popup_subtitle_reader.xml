<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/onPrimary"
    android:orientation="vertical"
    tools:context=".view.ui.reader.PopupSubtitleReader">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/popup_reading_subtitle_title"
        android:textColor="@color/onSecondary" />

    <LinearLayout
        android:id="@+id/material_button_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/nav_before_subtitle"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            app:iconTint="@color/textPrimary"
            app:icon="@drawable/ic_navigate_before" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cb_subtitle_selected"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:hint="@string/config_text_default_subtitle_translate"
            android:textColorHint="@color/textPrimary"
            app:boxBackgroundColor="@color/primary"
            app:boxStrokeColor="@color/onSecondary"
            app:hintTextColor="@color/onSecondary"
            app:placeholderTextColor="@color/textPrimary"
            app:startIconDrawable="@drawable/ic_translate"
            app:startIconTint="@color/onSecondary">

            <AutoCompleteTextView
                android:id="@+id/menu_autocomplete_subtitle_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/textPrimary" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/nav_next_subtitle"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            app:iconTint="@color/textPrimary"
            app:icon="@drawable/ic_navigate_next" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/textPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
