<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/on_primary"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:theme="@style/AppTheme.NoNavigationBar"
    tools:context=".view.ui.menu.MenuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="top|center"
        android:contentDescription="@string/about_app_name"
        android:scaleType="centerCrop"
        android:translationY="-30dp"
        android:src="@mipmap/select_manga_cut_semi"/>

    <View
        android:id="@+id/manga_detail_title_content"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:translationY="-30dp"
        android:background="@drawable/main_header_background"/>

    <FrameLayout
        android:id="@+id/root_frame_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:clipChildren="false" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>