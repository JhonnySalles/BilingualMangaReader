<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/on_primary"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:theme="@style/AppTheme.NoNavigationBar"
    tools:context=".view.ui.configuration.ConfigLibrariesActivity">

    <FrameLayout
        android:id="@+id/root_frame_configuration_libraries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/on_primary"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:clipChildren="false" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_transparent"
        android:fitsSystemWindows="true"
        android:theme="@style/ToolbarContentTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_configuration_libraries"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_navigator_header_size"
            android:gravity="start|center"
            app:popupTheme="@style/MyDarkToolbarStyle"
            android:theme="@style/ToolbarTheme"/>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>