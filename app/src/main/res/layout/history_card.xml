<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/primary"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">
    <!-- Media -->
    <ImageView
        android:id="@+id/history_image_cover"
        android:layout_width="@dimen/history_card_image"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/primary"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/book_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp">


        <!-- Title, secondary and supporting text -->
        <TextView
            android:id="@+id/history_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/manga_line_title_size" />

        <TextView
            android:id="@+id/history_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="@color/onSecondary"
            android:textSize="@dimen/manga_line_sub_title" />

    </LinearLayout>
</LinearLayout>