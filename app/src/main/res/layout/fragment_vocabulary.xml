<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_vocabulary_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.vocabulary.VocabularyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vocabulary_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:clipChildren="true"
        android:layout_margin="@dimen/margin_small">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vocabulary_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scrollbars="vertical"
            android:layout_marginTop="@dimen/page_link_list_link_margin_top"
            android:clipToPadding="true"
            android:scrollbarStyle="outsideOverlay"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vocabulary_content"
            app:layout_constraintVertical_bias="0"/>

        <LinearLayout
            android:id="@+id/vocabulary_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/content_toolbar_vocabulary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ToolbarContentTheme"
                android:background="@drawable/main_toolbar_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/vocabulary_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_navigator_header_size"
                    app:popupTheme="@style/MyDarkToolbarStyle"
                    android:theme="@style/ToolbarTheme">

                    <TextView
                        android:id="@+id/vocabulary_toolbar_library"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/vocabulary_manga_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Manga"
                android:textColorHint="@color/text_primary"
                app:boxBackgroundColor="@color/primary"
                app:boxStrokeColor="@color/on_secondary"
                app:startIconTint="@color/on_secondary"
                app:startIconDrawable="@drawable/ic_file"
                app:placeholderTextColor="@color/text_primary"
                app:hintTextColor="@color/on_secondary">

                <AutoCompleteTextView
                    android:id="@+id/vocabulary_manga_autocomplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/text_primary" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/page_link_language_margin"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/vocabulary_favorite"
                    android:layout_width="@dimen/page_link_pages_index"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_primary"
                    android:contentDescription="@string/page_link_page_index"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:textAllCaps="false"
                    android:padding="0dp"
                    android:layout_marginEnd="5dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    app:rippleColor="@color/ripple_color"
                    app:strokeWidth="0dp"
                    app:backgroundTint="@color/primary"
                    app:icon="@drawable/ic_favorite_unmark"
                    app:iconTint="@color/text_primary"
                    app:iconSize="28dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/vocabulary_find_text"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Vocabulario"
                    android:textColorHint="@color/text_primary"
                    app:boxBackgroundColor="@color/primary"
                    app:boxStrokeColor="@color/on_secondary"
                    app:hintTextColor="@color/secondary"
                    app:startIconDrawable="@drawable/ic_translate"
                    app:startIconTint="@color/on_secondary"  >

                    <AutoCompleteTextView
                        android:id="@+id/vocabulary_find_autocomplete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        android:textColor="@color/text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <!--                                Ended                                -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/vocabulary_scroll_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="@dimen/page_link_scrolling_button_margin"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/action_scroll_up"
            android:visibility="gone"
            app:tint="@color/on_secondary"
            android:src="@drawable/ic_up_arrow"
            app:backgroundTint="@color/on_secondary"
            app:borderWidth="@dimen/page_link_up_border"
            app:fabCustomSize="@dimen/page_link_up_width"
            app:maxImageSize="@dimen/page_link_up_image_width"
            app:layout_constraintTop_toTopOf="@+id/vocabulary_recycler"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/vocabulary_scroll_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/page_link_scrolling_button_margin"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/action_scroll_down"
            android:visibility="gone"
            app:tint="@color/on_secondary"
            android:src="@drawable/ic_down_arrow"
            app:backgroundTint="@color/on_secondary"
            app:borderWidth="@dimen/page_link_down_border"
            app:fabCustomSize="@dimen/page_link_down_width"
            app:maxImageSize="@dimen/page_link_down_image_width"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>