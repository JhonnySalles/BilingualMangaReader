<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- - - - - - - - - - - - - - - - - - - - Theme Toolbar and Navigation - - - - - - - - - - - - - - - - - - - -->
    <style name="MainToolbarContentTheme" parent="Theme.MaterialComponents">
        <item name="elevation">2dp</item>
    </style>

    <style name="MainToolbarContentTheme.NoElevation" parent="MainToolbarContentTheme">
        <item name="elevation">0dp</item>
    </style>

    <style name="MainToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorPrimary">?attr/colorSurfaceVariant</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
        <item name="colorControlNormal">?attr/colorOnSurfaceVariant</item>
        <item name="android:drawableTint">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColor">?attr/colorSurfaceVariant</item>
        <item name="colorControlHighlight">?attr/colorOnSurfaceVariant</item>
        <item name="materialThemeOverlay">@style/MainToolbarTheme</item>
    </style>

    <style name="MainToolbarTheme" parent="Base.Theme.MangaReader">
        <item name="android:textColorPrimary">?attr/colorSurfaceVariant</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
        <item name="colorControlNormal">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="colorControlHighlight">?attr/colorOnSurfaceVariant</item>
        <item name="iconTint">?attr/colorOnSurfaceVariant</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

